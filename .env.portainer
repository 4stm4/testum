# Ocultum Environment Variables for Portainer
# Скопируйте в Portainer → Stacks → Environment Variables

# ==============================================================================
# SECURITY - ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ ВСЕ ЗНАЧЕНИЯ!
# ==============================================================================

# Fernet encryption key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FERNET_KEY=8KMhgoZ3LqvVNxKz4YHzMNJRCq5YUf3yx8WlBKxuX8k=

# JWT secret key (min 32 characters, random string)
SECRET_KEY=your-very-long-secret-key-for-jwt-tokens-min-32-chars

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password

# ==============================================================================
# DATABASE
# ==============================================================================

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ocultum
DATABASE_URL=postgresql://postgres:postgres@db:5432/ocultum

# ==============================================================================
# REDIS
# ==============================================================================

REDIS_URL=redis://redis:6379/0

# ==============================================================================
# CELERY
# ==============================================================================

CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ==============================================================================
# MINIO (S3-compatible storage)
# ==============================================================================

MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=ocultum-artifacts
MINIO_SECURE=false

# ==============================================================================
# APPLICATION
# ==============================================================================

# SSH host key verification policy: "auto_add", "reject", "warning"
SSH_HOST_KEY_POLICY=auto_add

# JWT token expiration (minutes)
JWT_EXPIRATION_MINUTES=480

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000

# ==============================================================================
# LOGGING
# ==============================================================================

LOG_LEVEL=INFO

# ==============================================================================
# PRODUCTION SETTINGS (раскомментируйте для production)
# ==============================================================================

# ENVIRONMENT=production
# DEBUG=false
# RELOAD=false
