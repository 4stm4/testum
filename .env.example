# testum Environment Configuration

# Copy this file to .env and update with your values
APP_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Encryption (Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FERNET_KEY=your-fernet-key-here-must-be-32-bytes-urlsafe-base64

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/testum

# MinIO S3
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=testum-artifacts
MINIO_SECURE=false

# SSH Host Key Policy
# Options: auto_add (automatically accept new hosts), strict (reject unknown hosts)
SSH_HOST_KEY_POLICY=auto_add
